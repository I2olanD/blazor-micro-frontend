@using Client.Repositories.Menu

@inject IMenuRepository MenuRepository

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">Home</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="flex-column">
        @foreach (var menu in MenuRepository.GetAll())
        {
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="@menu.Scope" Match="NavLinkMatch.All">
                    <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> @menu.Name
                </NavLink>
            </div>
        }
    </nav>
</div>

